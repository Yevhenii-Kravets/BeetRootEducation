<div class="modal" id="modalInfoEvent">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-body row">

                <div class="form-group col-md-12">
                    <input type="text" class="form-control-plaintext" id="inputEventTitleInfo" disabled>
                </div>

                <div class="form-group col-md-12 mt-2">
                    <textarea type="text" class="form-control-plaintext" id="inputEventDescriptionInfo" disabled></textarea>
                </div>

                <div class="form-group col-md-6 mt-2">
                    <input type="datetime-local" id="datetimeEventStartInfo" class="form-control-plaintext" disabled>
                </div>
                <div class="form-group col-md-6 mt-2">
                    <input type="datetime-local" id="datetimeEventEndInfo" class="form-control-plaintext" disabled>
                </div>

                <div class="form-group row col-md-4 offset-md-8 mt-2">
                    <button type="button" class="btn btn-outline-primary col-md-5" id="buttonEventEdit">Edit</button>
                    <button type="button" class="btn btn-outline-danger col-md-6 offset-md-1" 
                    id="buttonEventDelete" data-bs-dismiss="modal">Delete</button>
                </div>

            </div>

        </div>
    </div>
</div>

<script type="module" src="~/js/modalViews/modalInfoEvent.js?v=1" asp-append-version="true"></script>