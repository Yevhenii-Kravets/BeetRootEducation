<div class="modal" id="modalUpdateTask">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-body row">

                <div class="form-group col-md-2">
                    <input type="color" id="colorTaskDotUpdate" class="form-control h-100 border-secondary">
                </div>
                <div class="form-group col-md-10">
                    <input type="text" class="form-control border-secondary" placeholder="Add title" id="inputTaskTitleUpdate">
                    <div class="invalid-feedback" id="labelTaskTitleUpdate"></div>
                </div>

                <div class="form-group col-md-12 mt-2">
                    <textarea type="text" class="form-control border-secondary" id="inputTaskDescriptionUpdate" placeholder="Add description" rows="3"></textarea>
                </div>


                <div class="form-group col-md-6 mt-2">
                    <input type="datetime-local" id="datetimeTaskStartUpdate" class="form-control border-secondary">
                </div>

            </div>

            <div class="modal-footer">
                <button id="buttonRequestUpdateTask" class="btn btn-success">Update</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<script type="module" src="~/js/modalViews/modalUpdateTask.js?v=2" asp-append-version="true"></script>